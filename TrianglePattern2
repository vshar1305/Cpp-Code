#include<iostream>
using namespace std;
int main()
{
    cout<<"Enter a number"<<endl;
    int n;
    cin>>n;
    int count=1;
    int i=1;
    while(i<=n)
    {
        int j=1;
        while(j<=i)
        {
            cout<<count<<" ";
            count=count+1;
            j=j+1;
        }
        cout<<endl;
        i=i+1;
    }
}

#include<iostream>
using namespace std;

int fibonacci(int n)
{
    //base case 
    if(n==0)
    {
        return 0;
    }
    if(n==1)
    {
        return 1;
    }

    //recursive function 

    return fibonacci(n-1)+fibonacci(n-2);
}

int main()
{
    int n;
    cout<<"Enter the nth term"<<endl;
    cin>>n;

    int ans=fibonacci(n);
    cout<<"Answer is\n"<<ans<<endl;
}
